---
import CommonHead from '../components/CommonHead.astro';
import NavHeader from '../components/NavHeader.astro';
import Logo from '../components/Logo.astro';
import * as info from '../info.js';
---

<html lang="en">
<head>
	<CommonHead />
	<title>{ info.project }</title>
	<base href=".">
	<style global>
		@import "../styles/main.css";
	</style>
</head>
<body class="welcome">
	<NavHeader title={ info.project } />
	<header class="hero-header">
		<section class="hero">
			<h1 class="hero-message">
				<div>{ info.project }</div>
				<div>Cascading binding sheets</div>
			</h1>
			<p class="under-hero">The power of declarative UI, without the complexity of <abbr title="Single-page application">SPA</abbr> frameworks. Use any backend you like; bind to the HTML you already produced.</p>
			<div class="button-list">
				<a href="installation/" class="primary button">Get started</a>
				<a href="api/" class="button">Documentation</a>
			</div>
		</section>
		<picture class="promo-art">
			<Logo />
		</picture>
	</header>
</body>
</html>
